<table>

  <td>
    <table class="recent">
      <tr class="recent">
        <th class="recent">Recent blog posts</th><td width="30%" class="new-post"><%= link_to 'New post', new_post_path%> | <%= link_to 'View blog', posts_path %></td>
      </tr>
      <%unless @posts.nil?%>
        <% @posts.each do |post| %>
        <tr>
          <td><b><%= link_to post.title, post %></b></td><td width="30%" class="new-post"><%= link_to 'Edit post', edit_post_path(post) %></td>
        </tr>
        <% end %>
      <%else%>
        <tr>
          <td><i>You have no saved drafts.</i></td>
        </tr>
      <% end %>

    </table>

    <br/>

    <table class="recent">
      <tr class="recent">
        <th class="recent">Recent drafts</th><td width="30%" class="new-post"><%= link_to 'New post', new_post_path %></td>
      </tr>

      <%unless @drafts.nil?%>
        <% @drafts.each do |draft| %>
        <tr>
          <td><b><%= link_to draft.title, draft %></b></td><td width="30%" class="new-post"><div class="draft-ts"><%= draft.updated_at%></div> | <%= link_to 'Edit', edit_post_path(draft) %></td>
        </tr>
        <% end %>
      <%else%>
        <tr>
          <td><i>You have no saved drafts.</i></td>
        </tr>
      <% end %>

    </table>
  </td>

  <td class="admin-info">
    <p>
  <b>Login:</b>
  <%=h @user.login %>
</p>
<p>
  <b>Email:</b>
  <%=h @user.email %>
</p>

<p>
  <b>Login count:</b>
  <%=h @user.login_count %>
</p>

<p>
  <b>Last request at:</b>
  <%=h @user.last_request_at %>
</p>

<p>
  <b>Last login at:</b>
  <%=h @user.last_login_at %>
</p>

<p>
  <b>Current login at:</b>
  <%=h @user.current_login_at %>
</p>

<p>
  <b>Last login ip:</b>
  <%=h @user.last_login_ip %>
</p>

<p>
  <b>Current login ip:</b>
  <%=h @user.current_login_ip %>
</p>
  </td>

</table>