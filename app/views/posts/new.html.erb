<h3>New post</h3>
<div class="edit-post">
<% form_for(@post) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :status %>
    <%= f.collection_select :status, Post::STATUSES, :to_s, :to_s,
       :include_blank => false
    %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
</div>
<%= link_to 'Back', posts_path %>